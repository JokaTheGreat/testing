{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": { "customMatcher": "\\.css$", "namedExport": true }
      }
    ]
  }
}
